{
	"manifest_version": 2,
	"name": "Minimal Text Editor",
	"version": "1.03",
	"description": "A minimal, lightweight, offline text editor.",
	"icons": {
		"128": "icon_128.png",
		"48": "icon_48.png",
		"16": "icon_16.png"
	},
	"browser_action": {
		"default_title": ""
	},
	"background": {
		"scripts": ["js/background.js"],
		"persistent": true
	},
	"web_accessible_resources": [
		"newtab.html",
		"newtab.css",
		"js/newtab.js"
	],
	"permissions": [
	  "storage"
	]
}